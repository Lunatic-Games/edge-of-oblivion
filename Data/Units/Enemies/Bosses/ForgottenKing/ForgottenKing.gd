extends "res://Data/Units/Enemies/Bosses/Boss.gd"


func choose_moveset() -> void:
	if move_sets.size() > 1:
		if current_tile.is_tile_n_tiles_away(GameManager.player.current_tile, 1):
			chosen_move = move_sets[1]
			chosen_move.indicate(current_tile)
		else:
			chosen_move = move_sets[0]
			chosen_move.indicate(current_tile)


func die() -> void:
	GlobalSignals.final_boss_defeated.emit(self)
	super.die()
